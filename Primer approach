/*Imput de los datos de mi red: dimension y temperatura*/
int main(int argc, char * argv[])
{
    int L;
    float beta;
    if (argc =< 2){
    printf ("Red de espines %d x %d \n", argv[1]);
    }
    else {
        printf("introduzca correctamente sus datos")
    }
    sscanf (argv[1], "%d", &L)
    sscanf (argv[2], "%f", &beta)
    if (L < 2){
        printf("dimension de la red menor a 2.")
    }
    if (beta < 0){
        printf("introduzca una temperatura positiva.")
    }
}
